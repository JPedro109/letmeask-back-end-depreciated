{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"strict": false,
		"strictPropertyInitialization": false,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"typeRoots": [
			"./src/@types"
		],
	},
	"exclude": [
		"**/*.test.ts"
	]
}